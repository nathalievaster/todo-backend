{
  "compilerOptions": {
    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",
    /* Environment */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node"
    ],
    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Strictness */
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}